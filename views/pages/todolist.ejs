<!-- Version 1 -->
<%-include("../templates/header.ejs") %>
            <div class="todo-container">
                <h2>To-Do List</h2>
                <div class="todo">
                    <form action="/create" method="post" class="todo-header">
                        <input type="text" name="tache" autofocus required>
                        <button type="submit"><span type="submit" class="fas fa-plus"></span></button>
                    </form>
                    <ul class="todo-list">
                        <% taches.forEach( (tache, index) => { %>
                            <% if(!tache.terminer) { %>
                                <li class="todo-list-item"> 
                                    <div class="todo-list-item-name"><%= tache.title %></div>
                                    <a href="/tache/<%= index %>/terminer" class="edit">      | Rayer la tâche
                                        <span class="fas fa-edit"></span>
                                    </a>  
                                </li>
                            <% } else{ %>
                                <li class="todo-list-item">
                                    <div class="todo-list-item-name"><s><%= tache.title %></s></div>
                                    <a href="/tache/<%= index %>/supprimer" class="remove">      | Supprimer la tâche
                                        <span class="fas fa-times"></span>
                                    </a>
                                </li>
                            <% } %>
                        <% }); %>
                    </ul>
                </div>
            </div>
        
    </body>

